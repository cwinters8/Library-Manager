form(method="post")
  p
    label(for="title") Title
    input(name="title" id="title" type="text" value=book ? book.title : '')
  p
    label(for="author") Author
    input(name="author" id="author" type="text" value=book ? book.author : '')
  p
    label(for="genre") Genre
    input(name="genre" id="genre" type="text" value=book ? book.genre : '')
  p
    label(for="year") Year
    input(name="year" id="year" type="text" value=book ? book.year : '')
  p
    input(type="submit", value=`${book ? 'Update' : 'Create New'} Book`)
  p
    a.button(href="/books") Cancel