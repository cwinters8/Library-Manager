extends layout.pug

block title
  title Books

block body
  h1 Books
  div.float-right
    form
      div.form-group.search
        label(for="search") Search
        input(title="search" id="search" type="text")
  p
    a.btn.btn-success(href="/books/new") Create New Book
  table.table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year